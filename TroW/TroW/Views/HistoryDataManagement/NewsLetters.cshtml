@model List<TroW.Models.NewsLetterViewModel>

@{
    ViewBag.Title = "Noutati";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Noutăți</h2>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-tools float-left">
                    @Html.ActionLink("Adaugă anunț", "EditNewsLetter", null, new { @class = "btn btn-primary" })
                    <br />
                </div>
                <div class="ibox-content">
                    <br />
                    <br />
                    <br />
                    <table class="table table-striped table-bordered table-hover news-table">
                        <thead>
                            <tr>
                                <th>
                                    <label class="control-label col-md-2">Titlu</label>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Header
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editează anunt", "EditNewsLetter", new { id = item.Id }, new { @class = "btn btn-white btn-sm" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('.news-table').dataTable();
    });
</script>
