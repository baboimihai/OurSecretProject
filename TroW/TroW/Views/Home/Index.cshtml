

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h3>Cauta ruta</h3>
    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("Route", "Home", FormMethod.Post, new { id = "form" }))
