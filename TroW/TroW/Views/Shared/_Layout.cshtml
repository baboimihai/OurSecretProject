<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title  Trow</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <div>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">

                        <img src="~/Images/train_icon.png" style="width: 130px;display: inline;" alt=""/>
                        <a style="width: 130px;display: inline;">Find the route with one click</a>
                    </p>
                    
                </div>
                <div class="float-right">
                    <section id="login">
                        <h3></h3>
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Acasa", "Index", "Home")</li>
                            <li>@Html.ActionLink("Despre", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body_div">
            <div class=" content-wrapper float-left" style="display: inline-block; width: 300px;height: 550px">
                @Html.Partial("_NewsLettersPartial")
            </div>
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Trow by students of Alexandru Ioan Cuza</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")

    </div>
</html>
